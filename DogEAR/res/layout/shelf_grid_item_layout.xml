<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/activity_horizontal_margin"
    android:minHeight="@dimen/shelf_grid_item_height"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/shelf_item_icon"
            android:layout_width="@dimen/shelf_grid_icon_size"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_droid" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shelf_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center"
                android:lines="2"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:text="hoge"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/shelf_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="top|left"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColorHint="@color/silver"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>